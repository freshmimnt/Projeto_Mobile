<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_primary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/WelcomeIntro"
        android:layout_width="259dp"
        android:layout_height="115dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Agenda"
        android:textColor="#26619c"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"
        tools:ignore="TextSizeCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_button"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginStart="324dp"
        android:layout_marginBottom="44dp"
        android:contentDescription="hello"
        android:src="@drawable/baseline_add_24"
        android:tooltipText="gfg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tarefa_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Tarefa"
        app:layout_constraintBottom_toTopOf="@+id/float_button"
        app:layout_constraintStart_toStartOf="@+id/teste_button" />

    <Button
        android:id="@+id/teste_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:text="Teste"
        app:layout_constraintBottom_toTopOf="@+id/tarefa_button"
        app:layout_constraintStart_toStartOf="@+id/lembrete_button" />

    <Button
        android:id="@+id/lembrete_button"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginStart="192dp"
        android:layout_marginBottom="12dp"
        android:text="Lembrete"
        app:layout_constraintBottom_toTopOf="@+id/teste_button"
        app:layout_constraintStart_toStartOf="@+id/WelcomeIntro" />

</androidx.constraintlayout.widget.ConstraintLayout>