<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_primary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047"
        app:srcCompat="@drawable/_cll7e_logomakr"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/login_intro"
        android:layout_width="354dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/signup_text"
        android:textColor="#26619c"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/curso_text"
        android:layout_width="319dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/grey_text_background"
        android:text="@string/email_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/uni_text"
        app:layout_constraintStart_toStartOf="@+id/uni_text"
        app:layout_constraintTop_toBottomOf="@+id/uni_text" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/curso_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/curso_text" />

    <TextView
        android:id="@+id/semestre_text"
        android:layout_width="317dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/grey_text_background"
        android:text="@string/password_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/curso_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/curso_text"
        app:layout_constraintTop_toBottomOf="@+id/curso_text" />

    <TextView
        android:id="@+id/turma_text"
        android:layout_width="317dp"
        android:layout_height="39dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/grey_text_background"
        android:text="@string/repeat_password_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/curso_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/curso_text"
        app:layout_constraintTop_toBottomOf="@+id/curso_text" />

    <TextView
        android:id="@+id/uni_text"
        android:layout_width="317dp"
        android:layout_height="39dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/grey_text_background"
        android:text="@string/name_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/login_intro"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/login_intro"
        app:layout_constraintTop_toBottomOf="@+id/login_intro" />

</androidx.constraintlayout.widget.ConstraintLayout>