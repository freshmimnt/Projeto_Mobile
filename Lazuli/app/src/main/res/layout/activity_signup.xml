<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewAgenda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_primary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/_cll7e_logomakr"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/login_intro"
        android:layout_width="310dp"
        android:layout_height="103dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/signup_text"
        android:textColor="#26619c"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="119dp"
        android:layout_height="63dp"
        android:layout_marginStart="248dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_next"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/grey_text_background"
        android:ems="10"
        android:hint="@string/name_text"
        android:textColorHint="#546E7A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/login_intro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login_intro"
        app:layout_constraintTop_toBottomOf="@+id/login_intro" />

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/grey_text_background"
        android:ems="10"
        android:hint="@string/email_text"
        android:textColorHint="#546E7A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/nome"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/nome"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/grey_text_background"
        android:ems="10"
        android:hint="@string/password_text"
        android:textColorHint="#546E7A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/email_signup"
        app:layout_constraintStart_toStartOf="@+id/email_signup"
        app:layout_constraintTop_toBottomOf="@+id/email_signup" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/grey_text_background"
        android:ems="10"
        android:hint="@string/rpassword_text"
        android:textColorHint="#546E7A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

</androidx.constraintlayout.widget.ConstraintLayout>